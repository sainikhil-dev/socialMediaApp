{{>_navbar}}
<div style="margin-top: 80px;" class="container">
    {{#each posts}}
    <div style="margin-left: 5px;"  class="media">
  <img class="mr-3 post-user-pic" src="{{user.image}}" alt="Generic placeholder image">
  <div class="media-body">
    <h3 class="mt-0">{{user.fullname}}</h3>
    <h4>{{title}} <small class="red"><i class="fa fa-globe"></i></small></h4>
    <p>{{body}}</p>
    <small>{{date}}</small>
    
  </div>
</div>
<hr>
{{else}}
<p>No Posts Found</p>
{{/each}}
</div>
{{>_footer}}